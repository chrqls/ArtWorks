<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="70dp"
    android:background="@drawable/rounded_border"
    android:focusable="false"
    android:focusableInTouchMode="false"
    android:orientation="horizontal"
    android:showDividers="middle" >

    <ImageView
        android:id="@+id/imageView1"
        android:layout_width="160dp"
        android:layout_height="240dp"
        android:scaleType="center"
        android:src="@drawable/ic_launcher" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="240dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="5dp"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/textview_artist_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            android:text="@string/mock_artist_name"
            android:textSize="24sp" />
        
        <TextView
            android:id="@+id/textview_nation_birth"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/mock_nationality_date"
            android:layout_marginRight="10dp"
            android:textSize="14sp" />
        
        <TextView
            android:id="@+id/textview_artwork_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            android:text="@string/mock_artwork_name"
            android:textStyle="bold"
            android:layout_marginTop="10dp"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/textview_artwork_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            android:text="@string/mock_artwork_type"
            android:textSize="14sp"
            android:textStyle="italic" />

<!--         <TextView -->
<!--             android:id="@+id/textview_creationdate" -->
<!--             android:layout_width="wrap_content" -->
<!--             android:layout_height="wrap_content" -->
<!--             android:layout_marginRight="10dp" -->
<!--             android:text="creation date" -->
<!--             android:textSize="15sp" -->
<!--             android:textStyle="italic" /> -->

        <TextView
            android:id="@+id/textView_description"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="10dp"
            android:textSize="11sp"
            android:text="@string/mock_description" />
    </LinearLayout>

</LinearLayout>